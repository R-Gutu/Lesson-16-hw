{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi":  ["error", "always"],
        "indent": ["error", 2],
        "comma-spacing": ["error", { "before": false, "after": true }],
        "space-infix-ops": ["error"]
    }
}